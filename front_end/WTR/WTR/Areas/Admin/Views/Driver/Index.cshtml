       @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</body>
</html>
<script type="text/javascript">
    new Vue({
        el: '#Ex',
        data () {
            return {
                objectIndex: 0,
                items: [],
                Driver: {
                    id_driver: "id_driver",
                    name: "name",
                    birth: "birth",
                    add: "add",
                    phone: "phone",
                    note: "note",
                    flag: "flag",
                }
            }
        },
        methods: {
            getID(id) {
                axios.get('http://localhost:54429/Bus/GetData/', { params: { id } })
                   .then(response => {
                       if (response.data.success) {
                           this.items = response.data.content;
                       }
                       else {
                           callToast("Không thành công", response.data.message, "error");
                       }
                   })
            },
            getUser() {
                axios.get('http://localhost:54429/Driver/GetData')
                   .then(response => {
                       if (response.data.success) {
                           this.items = [];
                           this.items = response.data.content;
                       }
                       else {
                           callToast("Không thành công", response.data.message, "error");
                       }
                   })
            },
            createUser() {
                axios.post('http://localhost:54429/Driver/Create', this.Driver)
                    .then(response => {
                        if (response.data.success) {
                            this.getUser();
                        }
                        else {
                            callToast("Không thành công", response.data.message, "error");
                        }
                    })
            },
            deleteUser(id, index) {

                axios.get('http://localhost:54429/Driver/Delete', { params: { id } })
                   .then(response => {
                       if (response.data.success) {
                           this.items.splice(index, 1);
                       }
                       else {
                           callToast("Không thành công", response.data.message, "error");
                       }
                   })
            },
            updateUser() {
                axios.post('http://localhost:54429/Driver/Edit', this.Driver)
                    .then(response => {
                        if (response.data.success) {
                            // this.items = response.data.content;
                            this.items.splice(this.objectIndex, 1, response.data.content);
                        }
                        else {
                            callToast("Không thành công", response.data.message, "error");
                        }
                    })
            },
            editUser(user, index) {
                this.objectIndex = index;
                this.Driver = {
                    id_driver: user.id_driver,
                    name: user.name,
                    birth: user.birth,
                    add: user.add,
                    phone: user.phone,
                    note: user.note,
                    flag:user.flag,
                };
            },

        },
        mounted () {
            this.getUser();
        }
    })
</script>     
}

